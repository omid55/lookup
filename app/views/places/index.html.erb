<div id="index-banner" class="parallax-container" style="height:760px; margin-top:-65px;">
    <div class="section no-pad-bot">
        <div class="container">
            <br>
            <br>
            <h1 class="header center white-text"> Welcome to</h1>
            <div class="row center">
                <%= image_tag("logo.svg", class: "responsive-img") %> 
                <h5 class="header col s8 light"> Find the hottest places around you!</h5>
            </div>
            <br>
            <br>


            <input id='search' type='text' , class='input-field' , style='color:white; font-size:1.35em'>


            <div class="center-align" style="padding-top:15px"> <a class="waves-effect waves-light btn" onclick="dosearch()">Search</a>
            </div>

        </div>
    </div>
    <div class="parallax"><img src="https://lh3.googleusercontent.com/-nBpoRGciu2k/VipgKMMfo8I/AAAAAAAAMao/KdSQEgAgptU/w1920-h1080/firewatch_150305_04.png" style="transform: translate3d(-50%, 260px, 0px); display: block;">
    </div>
</div>

<div class="row">
    <div class="col s12">
        <ul class="tabs">
            <li class="tab col s3"><a class="active" href="#card-view"> card view </a>
            </li>
            <li class="tab col s3"><a id="map-tab" href="#map-view" > map view </a>
            </li>
        </ul>
    </div>

    <div id="card-view" class="col s12">

        <div class="container">
            <div class="row">
                <% @places.each do |p| %>
                    <div class="col l4 m6 s12" style="padding:15px;">
                        <div class="ui card">
                            <div class="content" style="height:75px;">
                                <div class="right floated meta">14mi</div>
                             <span>
                                <%=image_tag p.photos.first.image.url, :class=> "ui avatar image", :style => 'float:left; margin-right:8px;' %>
                                    <%= link_to( truncate(p.title, length: 30) ,{:action=> 'show', :id => p.id})%>
                            </div>
                            </span>
                              <div class="image" style="height:200px; overflow:hidden;">
                                  <%=image_tag p.photos.first.image.url, :class=> "ui wireframe image valign" %>
                              </div>
                            <div class="content">
                                <span class="right floated">
          <i class="material-icons icon" style="float:left; margin-right:5px;">favorite_border</i>
          <% rate = @ratings.where('cacheable_id=?', p.id).first %>
          <% if( rate != nil) %>
          <%= rate.qty %> ratings 
          <% else %>
          0 ratings
          <% end %>
        </span>
                                <i class="material-icons icon" style="float:left; margin-right:5px;">comment </i> 
                                <%= p.reviews.count %> reviews
                            </div>
                            <div class="extra content">
                                    <p> Rate this place </p>
                                    <div> <%= rating_for p, "rating", :disable_after_rate => true %> </div>
                            </div>
                        </div> 
                    </div>
                    <% end %>
            </div>

        </div>
    </div>
</div>

<div id="map-view" class="container center-align" style = "padding:10px">
      <div class = "row">
         <div class = "col s12">
            <div id="map" class="s12" style="height:600px;"></div>
          </div>
      </div>
    </div>

</div>

<script async defer src="http://maps.google.com/maps/api/js?key=AIzaSyBuFEGkdNe9UqRlmyIY_KpfVaGgY3sbU88&libraries=places&callback=initMap"></script>


