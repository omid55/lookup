
<div class="container">
<div class = "row">
  <div class="col s6">
	<div class="ui card" style="width:400px;margin:20px;">
                            <div class="content">
                                <div class="right floated meta">14mi</div>
                                <%=image_tag @place.photos.first.image.url, :class=> "ui avatar image" %>
                                    <h2 class="#f57c00 orange-text text-darken-2"> <%= truncate(@place.title, length: 25)%> </h2>
                            </div>
                            <div class="content">
                            <div class="row" style="overflow:hidden">
                              <% @place.photos.each do |place| %>
                                <div class="col s12"> 
                                  <div  style="padding:10px; overflow:hidden">
                                  <%= image_tag place.image.url, :class => "responsive-img materialboxed" %>
                                  </div>
                                </div>
                                <% end %>
                                </div>
                              </div>
                            <div class="content">
                                <span class="right floated">
          <i class="material-icons icon" style="float:left; margin-right:5px;">favorite_border</i>
          <%= @rating %>
        </span>
                                <i class="material-icons icon" style="float:left; margin-right:5px;">comment </i> 
                                <%= @place.reviews.count %> reviews
                            </div>
                            <div class="extra content">
                                    <p> Rate this place </p>
                                    <div> <%= rating_for @place, "rating", :disable_after_rate => true, :cancel_place => 'right' %> </div>
                            </div>
  </div>


</div>

  <div class="col s6" style="margin:20px;">
    <div id="map" style="height:500px"></div>
 </div>

 </div>
 </div>
<script async defer src="http://maps.google.com/maps/api/js?key=AIzaSyBuFEGkdNe9UqRlmyIY_KpfVaGgY3sbU88&libraries=places&callback=initMap"></script>